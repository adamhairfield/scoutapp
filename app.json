{
  "expo": {
    "name": "Scout",
    "slug": "scout-team-app",
    "owner": "team-scout",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scout.sportsapp",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Scout uses the camera to take team photos and profile pictures.",
        "NSPhotoLibraryUsageDescription": "Scout accesses your photo library to select team photos and profile pictures."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#667eea",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.534069105587-msv0gqdi851dv4b2aimqtnvieqr2djtos"
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.scout.sportsapp",
      "versionCode": 1,
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "scoutapp",
    "associatedDomains": ["applinks:scout-app.com"],
    "description": "Connect. Compete. Conquer. - The ultimate sports team management app for coaches, parents, and players.",
    "extra": {
      "eas": {
        "projectId": "71c46caa-79ab-4196-8530-f56a8189e1a3"
      },
      "sportsEngineBackend": {
        "development": "http://192.168.0.152:3001",
        "production": "https://your-backend-domain.com"
      }
    }
  }
}
