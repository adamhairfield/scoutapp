{
  "expo": {
    "name": "Scout",
    "slug": "scout-sports-app",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scout.sportsapp",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Scout uses the camera to take team photos and profile pictures.",
        "NSPhotoLibraryUsageDescription": "Scout accesses your photo library to select team photos and profile pictures."
      }
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#667eea",
      "sounds": ["./assets/notification.wav"],
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.534069105587-msv0gqdi851dv4b2aimqtnvieqr2djtos"
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.scout.sportsapp",
      "versionCode": 1,
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "Connect. Compete. Conquer. - The ultimate sports team management app for coaches, parents, and players.",
    "privacy": "https://teamscout.co/privacy-policy",
    "category": "Sports",
    "keywords": ["sports", "team management", "coaching", "athletics"],
    "extra": {
      "eas": {
        "projectId": "07bfd362-e614-4988-80c6-351750fc861e"
      }
    }
  }
}
